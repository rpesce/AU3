<table>
	<tr>
		<th>Keywords</th>
		<th>Link Source</th>
		<th>Title</th>
		<th>Description</th>
		<th>Image link</th>
		<th>Votes</th>
	</tr>

	<% obj.each do |article| %>
		<tr>
			<!-- <td> <%= article.keywords.map(&:name).sort.join(", ") %> </td> EXAMPLE FROM WEB -->
			<% if article.keywords.any? %>
				<td> <%= render article.keywords %> </td>
			<% end %>
			<td> <%= article.link_source %> </td>
			<td> <%= article.title %> </td>
			<td> <%= article.description %> </td>
			<td> <%= article.image_link %> </td>
			
			<% if user_signed_in? %>
			<td>
				<%= link_to like_article_path(article), method: :put do %>
					Like
					<%= article.get_upvotes.size %>
				<% end %>

				<%= link_to dislike_article_path(article), method: :put do %>
					Unlike
					<%= article.get_downvotes.size %>
				<%end%>
			<% end %>			
			</td>
			
			<% if user_signed_in? && current_user == article.user %>
				<td> <%= link_to 'Show', article_path(article) %> </td>
				<td> <%= link_to 'Edit', edit_article_path(article) %> </td>
				<td> <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: 'Are you sure?' }  %> </td>
			<% end %>
		</tr>
	<% end %>
</table>
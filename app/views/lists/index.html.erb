<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<% @lists.each do |list| %>
  <table>
    <thead>
      <tr>
        <th><%= list.name %></th>
      </tr>
      <% if user_signed_in? && current_user == list.user || current_user.admin? %>
        <tr>
          <td> <%= link_to 'Show', list %> | <%= link_to 'Edit', edit_list_path(list) %> |  <%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %> </td>
        </tr>
      <% end %>
    </thead>

    <tbody>
      <% list.items.all.each do |i| %>
        <tr>
          <td> <%= i.name %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>

